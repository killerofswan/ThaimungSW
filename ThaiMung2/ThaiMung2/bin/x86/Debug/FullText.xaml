<UserControl
    x:Class="ThaiMung2.FullText"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ThaiMung2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="768"
    d:DesignWidth="1280">

    <Grid>
        <Canvas x:Name ="fulltextCanvas" Margin="0,0,0,0" VerticalAlignment="Center" />
        <TextBlock HorizontalAlignment="Left" Margin="75,86,0,0" TextWrapping="Wrap" Text="Date" VerticalAlignment="Top" FontFamily="Segoe UI" FontSize="22"/>
        <TextBlock HorizontalAlignment="Left" Margin="170,155,0,0" TextWrapping="Wrap" Text=":" VerticalAlignment="Top" FontFamily="Segoe UI" FontSize="22"/>
        <TextBlock x:Name="dateEvent"   HorizontalAlignment="Left" Margin="210,86,0,0" TextWrapping="Wrap" Text="dd/MM/yy" VerticalAlignment="Top" FontFamily="Segoe UI" FontSize="22"/>
        <TextBlock HorizontalAlignment="Left" Margin="75,155,0,0" TextWrapping="Wrap" Text="Time" VerticalAlignment="Top" FontFamily="Segoe UI" FontSize="22"/>
        <TextBlock x:Name="timeEvent"  HorizontalAlignment="Left" Margin="210,155,0,0" TextWrapping="Wrap" Text="HH : mm" VerticalAlignment="Top" FontFamily="Segoe UI" FontSize="22"/>
        <TextBlock HorizontalAlignment="Left" Margin="170,86,0,0" TextWrapping="Wrap" Text=":" VerticalAlignment="Top" FontFamily="Segoe UI" FontSize="22"/>
        <TextBlock HorizontalAlignment="Left" Margin="75,225,0,0" TextWrapping="Wrap" Text="Location" VerticalAlignment="Top" FontFamily="Segoe UI" FontSize="22"/>
        <TextBlock HorizontalAlignment="Left" Margin="137,290,0,0" TextWrapping="Wrap" Text="Latitude" VerticalAlignment="Top" FontFamily="Segoe UI" FontSize="22"/>
        <TextBlock HorizontalAlignment="Left" Margin="255,290,0,0" TextWrapping="Wrap" Text=":" VerticalAlignment="Top" FontFamily="Segoe UI" FontSize="22"/>
        <TextBlock x:Name ="latitudeEvent"  HorizontalAlignment="Left" Margin="305,290,0,0" TextWrapping="Wrap" Text="latitude" VerticalAlignment="Top" FontFamily="Segoe UI" FontSize="22"/>
        <TextBlock HorizontalAlignment="Left" Margin="137,350,0,0" TextWrapping="Wrap" Text="Longitude" VerticalAlignment="Top" FontFamily="Segoe UI" FontSize="22"/>
        <TextBlock HorizontalAlignment="Left" Margin="255,350,0,0" TextWrapping="Wrap" Text=":" VerticalAlignment="Top" FontFamily="Segoe UI" FontSize="22"/>
        <TextBlock x:Name ="longitudeEvent"  HorizontalAlignment="Left" Margin="305,350,0,0" TextWrapping="Wrap" Text="longitude" VerticalAlignment="Top" FontFamily="Segoe UI" FontSize="22"/>
        <TextBlock HorizontalAlignment="Left" Margin="75,421,0,0" TextWrapping="Wrap" Text="Tag" VerticalAlignment="Top" FontFamily="Segoe UI" FontSize="22"/>
        <TextBlock HorizontalAlignment="Left" Margin="170,421,0,0" TextWrapping="Wrap" Text=":" VerticalAlignment="Top" FontFamily="Segoe UI" FontSize="22"/>
        <TextBlock x:Name="tagEvent"  HorizontalAlignment="Left" Margin="210,421,0,0" TextWrapping="Wrap" Text="Tag's event" VerticalAlignment="Top" FontSize="22" FontFamily="Segoe UI" Width="390" Height="184"/>
        <Canvas HorizontalAlignment="Left" Height="574" Margin="645,31,0,0" VerticalAlignment="Top" Width="574">
            <Canvas.Background>
                <ImageBrush ImageSource="PostIt2.png"/>
            </Canvas.Background>
        </Canvas>
        <TextBlock x:Name="descriptionEvent"  HorizontalAlignment="Left" Margin="715,183.493,0,0" TextWrapping="Wrap" Text="Content goes here" VerticalAlignment="Top" Height="361.507" Width="451.63" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" Foreground="#FF55544F" FontSize="22" FontFamily="Segoe UI">
            <TextBlock.RenderTransform>
                <CompositeTransform Rotation="-2.777"/>
            </TextBlock.RenderTransform>
        </TextBlock>
        <Button x:Name="solveButton"  Content="" HorizontalAlignment="Left" Margin="58,643,0,0" VerticalAlignment="Top" Style="{StaticResource AppBarButtonStyle}" AutomationProperties.Name="Solve" FontSize="22"/>
        <TextBlock x:Name="countSolve" HorizontalAlignment="Left" Margin="163,661,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontFamily="Segoe UI" FontSize="22"/>
        <Button x:Name="spamButton" Content="" HorizontalAlignment="Left" Margin="217,643,0,0" VerticalAlignment="Top" Style="{StaticResource AppBarButtonStyle}" AutomationProperties.Name="Spam" FontSize="22"/>
        <TextBlock x:Name="countSpam"  HorizontalAlignment="Left" Margin="322,661,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontFamily="Segoe UI" FontSize="22"/>
        <Button x:Name="witnessButton" Content="" HorizontalAlignment="Left" Margin="355,643,0,0" VerticalAlignment="Top" Style="{StaticResource AppBarButtonStyle}" AutomationProperties.Name="Witness" FontSize="22"/>
        <TextBlock x:Name="countWitness" HorizontalAlignment="Left" Margin="465,661,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontFamily="Segoe UI" FontSize="22"/>
    </Grid>
</UserControl>

