                <x:String>23</x:String>
            </ComboBox>
            <TextBlock HorizontalAlignment="Left" Margin="326,107,0,0" TextWrapping="Wrap" Text=":" VerticalAlignment="Top" FontSize="22" FontFamily="Segoe UI"/>
            <ComboBox x:Name="TimeMinute" HorizontalAlignment="Left" Margin="352,107,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0" FontSize="22" SelectedItem="00">
                <x:String>00</x:String>
                <x:String>01</x:String>
                <x:String>02</x:String>
                <x:String>03</x:String>
                <x:String>04</x:String>
